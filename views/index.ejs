<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />

    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="css/styles.css" />

    <title>David's Gallery App</title>
    <link rel="icon" type="image/x-icon" href="/images/David.jpeg.jpg">
  </head>

  <body>
    <!-- Navbar -->

    <nav class="navbar navbar-expand-lg navbar-dark bg-success static-top">
      <div class="container-fluid">
        <img src="/images/David.jpeg.jpg" class="img-thumbnail" alt="image not found" width="80" height="80">
        <p>
        <a class="navbar-brand left"><h1 style="text-align: center; color: black"><strong>David's Gallery App</strong></h1></a> 
       
      </p>
        <form class="d-flex" role="search" action="/search" method="post">
          <input
            class="form-control me-3"
            type="search"
            id="search"
            name="search"
            placeholder="Search image"
            aria-label="Search"
          />
          <button class="button button2"><strong>SUBMIT</strong></button>
        </form>
      </div>
    </nav>

    <!-- Navbar end -->

    <div class="container">
      <h2>Upload Your Image Here</h2>

      <% if (typeof msg !=='undefined' ){ %> <%= msg %> <% } else {%> <%= msg=''
      %> <% } %>

      <!-- upload form -->

      <form action="/upload" method="POST" enctype="multipart/form-data">
        <div class="file-field input-field">
          <div class="btn grey">
            <div class="mb-3">
              <label for="formFile" class="form-label mb-3"
                ><strong>Choose image to upload</strong></label
              >

              <input
                name="image"
                class="form-control"
                type="file"
                id="formFile"
              />
            </div>
          </div>
        </div>

        <div class="file-path-wrapper">
          <label for="formFile" class="form-label"
            ><strong>Image Name</strong>
          </label>

          <input class="file-path validate" type="text" />
        </div>

        <button class="button button1"><strong>SUBMIT</strong></button>
      </form>

      <!-- Upload form end  -->

      <hr />

      <br />

      <% if (typeof file !=='undefined' ){ %>

      <img src="<%= file %>" class="responsive-img" />

      <% } else {%> <%= file='' %> <% } %>
    </div>
    <hr>
    <h3 style="text-align: center; color: black">&lt;&lt; &copy;David's Gallery App 2023&gt;&gt;</h3>
<div id="socialtools">
      <div class="row">
        <div class="col-md-1">
          <!-- twitter -->
          <img src="/images/twitter.png" alt="twitter" />
        </div>
        <div class="col-md-1">
          <!-- dribble -->
          <img src="/images/dribble.png" alt="dribble" />
        </div>
        <div class="col-md-1">
          <!-- facebook -->
          <img src="/images/facebook.png" alt="facebook" />
        </div>
        <div class="col-md-1">
          <!-- google plus -->
          <img src="/images/g_plus.png" alt="google plus" />
        </div>
        <div class="col-md-1">
          <!-- skype -->
          <img src="/images/skype.png" alt="skype" />
        </div>
        <div class="col-md-1">
          <!-- stumble_upon -->
          <img src="/images/stumble_upon.png" alt="stumble_upon" />
        </div>
        <div class="col-md-1">
          <!-- behance-->
          <img src="/images/behance.png" alt="behance" />
        </div>
        <div class="col-md-1">
          <!-- pinterest-->
          <img src="/images/pinterest.png" alt="pinterest" />
        </div>
        <div class="col-md-1">
          <!-- flicker -->
          <img src="/images/flickr.png" alt="flicker" />
        </div>
      </div>
    </div>
    <br />
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
